{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="h3 mb-3 text-center">S'inscrire</h1>

                {% for flash_error in app.flashes('verify_email_error') %}
                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}

                {{ form_start(registrationForm) }}
                <div class="form-group mb-3">
                    <label for="inputEmail" class="form-label">Email</label>
                    {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'id': 'inputEmail'}}) }}
                    {{ form_errors(registrationForm.email) }}
                </div>

                <div class="form-group mb-3">
                    <label for="inputPassword" class="form-label">Mot de passe</label>
                    {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'id': 'inputPassword'}}) }}
                    {{ form_errors(registrationForm.plainPassword) }}
                </div>

                <div class="form-check mb-3">
                    {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input', 'id': 'agreeTerms'}}) }}
                    <label for="agreeTerms" class="form-check-label">J'accepte les termes et conditions</label>
                    {{ form_errors(registrationForm.agreeTerms) }}
                </div>

                <button class="btn btn-primary w-100" type="submit">S'inscrire</button>
                {{ form_rest(registrationForm) }}
                {{ form_end(registrationForm) }}

                <div class="mt-3 text-center">
                    <a href="{{ path('app_login') }}">Vous avez déjà un compte? Connectez-vous ici.</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
